[database]
host     = "{{ db_host }}"
port     = "{{ db_port }}"
username = "{{ db_user }}"
password = "{{ db_password }}"
dbname   = "{{ db_name }}"
prefix   = "{{ db_prefix }}"
charset  = "utf8"

